{
    "manifest_version": 3,
    "name": "Insert URL Content",
    "description": "The tool lets you easily insert or copy-paste content from any link on Claude, Gemini.",
    "version": "0.0.5",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "action": {
        "default_title": "Link Content",
        "default_popup": "popup/popup.html"
    },
    "permissions": [],
    "web_accessible_resources": [
        {
            "resources": ["button.svg", "button.png"],
            "matches": [
                "https://gemini.google.com/*",
                "https://claude.ai/*"]
                    }
    ],
    "content_scripts": [{
        "js": ["foreground.js"],
        "css": ["foreground.css"],
        "matches": [
            "https://gemini.google.com/*",
            "https://claude.ai/*"]
        }]
}
